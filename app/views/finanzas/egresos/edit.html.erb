<%= render 'shared/menu' %>
    <div class="container" style="margin-left:18%">
        <div class="card" aria-hidden="true">
            <div class="card-body">
                <h4>Editar egreso</h4>
            </div>
        </div>
        <div class="card" aria-hidden="true">
            <div class="card-body">
                <div class="row">
                    <div class="col-10" style="margin-top:2%">
                    <%= form_with(model:@ingreso ,url: egreso_path) do |form| %>
                        <% @ingreso.errors.full_messages.each do |error| %>
                            <div><%= error %> <% end %> </div>
                        <div class="mb-3">
                            <%= form.label :fecha , :class => 'form-label' %>
                            <%= form.date_field :fecha , :class => 'form-control' %>
                        </div>
                        <%= form.collection_select :id_categoria, @categoria, :id, :categoria , :class => 'form-select' %>
                        <div class="mb-3">
                            <%= form.label :monto , :class => 'form-label' %>
                            <%= form.number_field :monto , :class => 'form-control' %>
                        </div>
                        <div class="mb-3">
                            <%= form.label :comentario , :class => 'form-label' %>
                            <%= form.text_field :comentario , :class => 'form-control' %>
                        </div>
                        <div class="mb-3" hidden>
                        <%= form.label :tipo , :class => 'form-label' %>
                        <%= form.text_field :tipo , :class => 'form-control', :value=> '2' %>
                    </div>
                        <div class="mb-3">
                        <%= form.submit "Editar egreso", :class => "btn btn-success" %>
                       </div>
                    <% end %>
                    </div>
                </div>
            </div>
        </div>
        <%= stylesheet_link_tag  %>
    </div>

    <script>
        $(document).ready( function () {
            $('#tableCategoria').DataTable();
        } );
    </script>