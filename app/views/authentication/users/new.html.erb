
<div class="container">
<div class="row" style="margin-top:5%">
    <div class="col-12"> 
        <center><h1>Registro</h1></center>
    </div>
    <div class="col-12">
        <%= form_with(model:@user) do |form| %>
            <% @user.errors.full_messages.each do |error| %>
                <div><%= error %> </div> <% end %>
                
                <div class="mb-3">
                    <%= form.label :nombre , :class => 'form-label' %>
                    <%= form.text_field :nombre , :class => 'form-control' %>
                </div>
                <div class="mb-3">
                <%= form.label :rut , :class => 'form-label' %>
                <%= form.text_field :rut , :class => 'form-control' %>
            </div>
                <div class="mb-3">
                    <%= form.label :telefono , :class => 'form-label' %>
                    <%= form.number_field :telefono , :class => 'form-control' %>
                </div>
                <div class="mb-3">
                    <%= form.label :email , :class => 'form-label' %>
                    <%= form.email_field :email , :class => 'form-control' %>
                </div>
                <div class="mb-3">
                    <%= form.label :username , :class => 'form-label' %>
                    <%= form.text_field :username , :class => 'form-control' %>
                </div>
                <div class="mb-3">
                    <%= form.label :password , :class => 'form-label' %>
                    <%= form.password_field :password , :class => 'form-control' %>
                </div>
                <div class="mb-3">
                    <label for="form-label">Ya tienes cuenta? <a href="/sessions/new">¡Click para iniciar sesión!</a></label>
                </div>
                <div class="mb-3">
                 <%= form.submit "Crear usuario" , :class => 'btn btn-success' %>
                </div>
             
            <% end %>
    </div>
</div>
</div> 